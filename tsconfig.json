{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./__tests__/*"],
      "@tools/*": ["./__tests__/tools/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
